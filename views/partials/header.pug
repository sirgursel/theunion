.navbar.navbar-expand-lg
    .container
        a.navbar-brand.ml-3.ml-lg-0(href='/')
            img(src="/img/union-logo-wordmark.png", alt="")
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            //- span.navbar-toggler-icon
            i.fas.fa-bars.fa-2x
        .collapse.navbar-collapse
            -
                var links = [{title: 'About'},
                {title: 'Events'},
                {title: 'Amenities'},
                //- {title: 'Pricing'},
                {title: 'Gallery'},
                //- {title: 'Blog'},
                //- {title: 'Team'},
                {title: 'Contact'},
                {title: 'FAQ'}]
            ul.nav.navbar-nav.ml-lg-auto.mr-lg-5
                each link in links
                    li.nav-item
                        a.nav-link(href='/'+link.title.toLowerCase() data-section=link.section class=(title.toLowerCase() === link.title.toLowerCase()) ? 'active' : undefined)= link.title
            .navbar-right.text-center
                if loggedIn
                    button(style="line-height:25px").btn.btn-gray
                        | My account
                        img(src="/img/account-icon@2x.png" alt="" height="25").ml-3
                else
                    //- a(href="https://members.theunion.io")
                        button.btn.btn-gray Member Area
                    form(action='https://www.paypal.com/cgi-bin/webscr', method='post', target='_top')
                        input(type='hidden', name='cmd', value='_s-xclick')
                        input(type='hidden', name='hosted_button_id', value='T6V5CXD58XTJW')
                        input(type='image', src='https://www.paypalobjects.com/en_US/i/btn/btn_donateCC_LG.gif', border='0', name='submit', title='PayPal - The safer, easier way to pay online!', alt='Donate with PayPal button')
                        img(alt='', border='0', src='https://www.paypal.com/en_US/i/scr/pixel.gif', width='1', height='1')
